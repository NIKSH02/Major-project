<% layout("/layouts/boilarplate") -%>
<body>
  <h3 style="color: white;">All listing</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 " style="margin: 0.5rem;">
    <% for (listing of allListing) { %>
      <a class="listing-link" href="/listing/<%= listing._id %>">
      <div class="card col listing-card">
        <img src="<%= listing.image %>"class="card-img-top index-img"alt="Image" loading="lazy"/>  <!--style="height: 20rem" -->
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price.toLocaleString('en-IN') %>/night
          </p>
        </div>
      </div>
      </a>
    <% } %>
  </div>
</body>
